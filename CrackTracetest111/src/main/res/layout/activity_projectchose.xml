<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cracktrace.CrackTraceActivity">
    >

    <Button
        android:id="@+id/btn_createnewproject"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="46dp"
        android:layout_weight="1"
        android:background="#00000000"
        android:text="创建新项目"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="46dp" />

    <Button
        android:id="@+id/btn_projectreturn"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_createnewproject"
        android:layout_marginEnd="45dp"
        android:layout_weight="1"
        android:background="#00000000"
        android:text="返回"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp" />

    <TextView
        android:id="@+id/textview_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="请选择项目"
        android:textSize="25dp"/>

    <ListView
        android:id="@+id/listview_showproject"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />

    <TextView
        android:id="@+id/textview_noproject"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textview_hint"
        android:text="没有项目，请创建"
        android:textSize="25dp"/>
</RelativeLayout>
