<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textview_noprojectpicture"
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_below="@id/text_hint"
        android:text="没有图片，请添加"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_addnewpicture"
        android:layout_marginEnd="35dp"
        android:text="返回" />

    <Button
        android:id="@+id/btn_addnewpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:text="添加新照片" />
    <TextView
        android:id="@+id/text_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="请选择要操作的图片"/>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_below="@id/text_hint"
        android:columnWidth="120dp"
        android:horizontalSpacing="5dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:stretchMode="columnWidth"
        tools:ignore="InvalidId"></GridView>


</RelativeLayout>
